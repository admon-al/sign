<% layout('layout') -%>

<div class="container">
    <div class="row">
        <div class="col">
            <form action="/sign/url">
                <input type="text" name="url" placeholder="Enter URL"/>
                <input type="submit" value="Sign">
            </form><br/>
            <form action="/verify/url">
                <input type="text" name="url" placeholder="Enter URL"/>
                <input type="submit" value="Verify">
            </form><br/>
        </div>
        <div class="col">
            <form action="/sign/file" enctype="multipart/form-data" method="post">
                <input type="file" name="file"/>
                <input type="submit" value="Sign file">
            </form><br/>
            <form action="/verify/file" enctype="multipart/form-data" method="post">
                <input type="file" name="file"/>
                <input type="submit" value="Verify file">
            </form><br/>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col">
<div style="width:49%;float:left">
    <form action="/sign/text" method="post">
        <textarea name="text" rows="26" style="width:98%" placeholder="Enter text to sign"></textarea>
        <br>
        <input type="submit" value="Sign text">
    </form>
</div>
<div style="width:49%;float:left">
    <form action="/verify/text" method="post">
        <textarea name="text" rows="26" style="width:98%" placeholder="Enter text to verify"></textarea>
        <br>
        <input type="submit" value="Verify text">
    </form>
</div>
        </div>
    </div>
</div>
